#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <ctype.h>
#include "main.h"

/**
 * print_last_digit - Print last digit of number
 * @n: Input parameter
 *
 * Return: last digit
 */

int print_last_digit(int n)
{
int y = n%10;
if (y > 0)
{
return (y);
}
else
{
int x = -1 * y;
return (x);
}
}
