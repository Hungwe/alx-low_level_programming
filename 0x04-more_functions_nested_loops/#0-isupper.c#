#include <stdio.h>
#include <stdlib.h>
#include <time.h>
#include <string.h>
#include <ctype.h>
#include "main.h"


/**
 * main - check the code.
 *
 * Return: Always 0.
 */

int main(void)
{
char c;

c = 'A';
printf("%c: %d\n", c, _isupper(c));
c = 'a';
printf("%c: %d\n", c, _isupper(c));

return (0);
}

/**
 *_isupper - Checks if letter is upper case
 * @c: input character
 *
 * Return: 1 or 0
 */

int _isupper(int c)
{
int a;

a = isupper(c);

if (a > 0)
{
return (1);
}  
else
{
return (0);
}
}
